    "eslint-plugin-tsdoc": "^0.5.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jest": "^30.2.0",
    "jest-runner": "^30.2.0",
    "jest-serial-runner": "^1.2.2",
    "prettier": "^3.7.4",
    "sort-package-json": "^3.6.0",
    "ts-jest": "29.4.6",
    "typescript": "5.9.3"
  },
  "volta": {
    "node": "20.11.1",
    "bun": "1.0.20"
  },
  "publishConfig": {
    "access": "public"
  },
  "moduleDirectories": [
    "node_modules",
    "dist"
  ]
